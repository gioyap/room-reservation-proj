{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"types": ["node", "@types/bcryptjs", "express"],
		"target": "ES6",
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"node_modules/@types"
		// "src/**/*.ts"
	],
	"exclude": ["node_modules"]
}
